<?xml version="1.0"?>


<PropertyList>
    <name>MFD</name>
    <w-base>120</w-base>
    <h-base>120</h-base>

    <layers>

        <layer>
        <name>WP ID</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>3.5</point-size>
        <color>
            <red>0.8</red>
            <green>0.35</green>
            <blue>0.5</blue>
        </color>
        <chunks>
            <chunk>
                <type>text-value</type>
                <property>autopilot/route-manager/wp/id</property>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>40</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>53</offset>
            </transformation>
        </transformations>
    </layer>


        <layer>
        <name>WP ETA</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>3.5</point-size>
        <color>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </color>
        <chunks>
            <chunk>
                <type>text-value</type>
                <property>autopilot/route-manager/wp/eta</property>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>40</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>45</offset>
            </transformation>
        </transformations>
    </layer>

        <layer>
        <name>WP DIST</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>3.5</point-size>
        <color>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </color>
        <chunks>
            <chunk>
                <type>number-value</type>
                <property>autopilot/route-manager/wp/dist</property>
                <format>%3.1f</format>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>40</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>41</offset>
            </transformation>
        </transformations>
    </layer>

    <layer>
        <name>GSPD</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>3</point-size>
        <color>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </color>
        <chunks>
            <chunk>
                <type>number-value</type>
                <property>velocities/groundspeed-kt</property>
                <format>GS %3.0f</format>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-56</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>53</offset>
            </transformation>
        </transformations>
    </layer>

    <layer>
        <name>TAS</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>3</point-size>
        <color>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </color>
        <chunks>
            <chunk>
                <type>number-value</type>
                <property>velocities/uBody-fps</property>
                <scale>0.59248380</scale>
                <format>TAS %3.0f</format>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-40</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>53</offset>
            </transformation>
        </transformations>
    </layer>

    <layer>
        <name>Wind</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>3.5</point-size>
        <color>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </color>
        <chunks>
            <chunk>
                <type>number-value</type>
                <property>environment/wind-from-heading-deg</property>
                <format>%3.0f</format>
            </chunk>
            <chunk>
                <type>literal</type>
                <text>*/</text>
            </chunk>
            <chunk>
                <type>number-value</type>
                <property>environment/wind-speed-kt</property>
                <format>%3.0f</format>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-57</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>45</offset>
            </transformation>
        </transformations>
    </layer>

    <layer>
        <name>WXR</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>3.5</point-size>
        <color>
            <red>0.6</red>
            <green>0.6</green>
            <blue>0.8</blue>
        </color>
        <chunks>
            <chunk>
                <type>text-value</type>
                <property>instrumentation/radar/mode</property>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-57</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>-35</offset>
            </transformation>
        </transformations>
    </layer>

    <layer>
        <name>WXR range</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>3.5</point-size>
        <color>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </color>
        <chunks>
            <chunk>
                <type>number-value</type>
                <property>instrumentation/radar/range</property>
                <format>%3.0f</format>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-57</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>-43</offset>
            </transformation>
        </transformations>
    </layer>

    </layers>

 <actions>
        <action>
            <name>outline</name>
            <button>0</button>
            <x>-60</x>
            <y>-60</y>
            <w>120</w>
            <h>120</h>
        </action>
 </actions>

</PropertyList>