<?xml version="1.0"?>


<PropertyList>
    <name>Airport Chart</name>
    <w-base>512</w-base>
    <h-base>512</h-base>

    <layers>

        <layer>
            <name>ground network</name>
            <texture>
                <path>Aircraft/Instruments/Textures/od_groundradar.rgb</path>
                <x1>0</x1>
                <y1>0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
            <emissive>true</emissive>
            <w>512</w>
            <h>512</h>
            <transformations>
                <transformation>
                    <type>rotation</type>
                    <property>orientation/heading-magnetic-deg</property>
                </transformation>
            </transformations>
        </layer>

        <layer>
        <name>Airport ID</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>16</point-size>
        <color>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </color>
        <chunks>
            <chunk>
                <type>text-value</type>
                <property>instrumentation/groundradar/id</property>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-240</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>240</offset>
            </transformation>
        </transformations>
    </layer>

    </layers>

    <actions>
        <action>
            <name>outline</name>
            <button>0</button>
            <x>-256</x>
            <y>-256</y>
            <w>512</w>
            <h>512</h>
        </action>
    </actions>

</PropertyList>